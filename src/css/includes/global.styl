@import 'reset'
@import 'variables'
@import 'mixins'
@import 'code'


html, body
  height  100%
  box-sizing  border-box
  font-family Helvetica, Arial, sans-serif
  font-size px(20)
  color #515151
  line-height 1.5
  @media (min-width: px(1300))
    font-size px(17)
  
*, * before, * after
  box-sizing  inherit 

img 
  max-width  100%
  height  auto

main, aside, session
  height  100%
  @media (max-width: px(770))
    height auto

a
  text-decoration none
  &:link
  &:visited
    color $highlight_color
  &:hover
  &:focus
    color $highlight_hover

