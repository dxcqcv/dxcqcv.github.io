@import 'includes/global'

$default-alignPad-top = unit($golden_major,rem)
$default-alignPad-left = unit($phi,rem)

AlignPad(top = $default-alignPad-top, left = $default-alignPad-left)
  padding top left

main
  Row('auto')

session
  Cols( 3.25 )
  AlignPad()
  background   #fff
  @media (max-width: px(1900))
    Cols( 3 )
  @media (max-width: px(1400))
    Cols( 2.7 )
  @media (max-width: px(770))
    Cols( 4 )
  @media (max-width: px(115))
    background transparent
    
aside
  Cols( .75 )
  AlignPad()
  background   $highlight_color
  @media (max-width: px(1900))
    Cols( 1 )
  @media (max-width: px(1400))
    Cols( 1.3 )
  @media (max-width: px(770))
    Cols( 4 )
  @media (max-width: px(115))
    background transparent

a.name
  color #fff

.lead
  color $highlight_textover   
  font-size px(25)

a.sidebar-nav-item
  color   #fff
  display   block
  padding 1em 0 0    
  @media (max-width: px(115))
    color #000
  &:hover
    color $highlight_hover

.sidebar-about > h1 
  font-size 4.5em
  color   #fff
  @media (max-width: px(115))
    color #000
  
nav 
  padding  unit($phi, em) 0  

  
.list-inline
  display flex
  justify-content space-between 
  color $highlight_textover
  @media (max-width:px(250))
    display block
  & > li > a
    display inline-block
    text-align center
    line-height px(40, 16)
    width   px(40, 16)   
    height   @width 
    border-radius   100%
    background   #fff

#credits
  padding-top unit($phi, em)
  color $highlight_textover
  display block
  & > a
    color $highlight_textover

.info
  padding-bottom 1rem

h1.post-title
  font-size px(40)
  &:hover
    text-decoration underline
  
.post-tags
  color #fff
  background $highlight_darkened
  padding unit($golden_minor,rem) unit($golden_major,rem)
  border-radius unit($golden_major,rem)

.post-date
  color $highlight_lightened

.pagination
  margin px(30) 0 
  & > a
    border px(1) solid #eee
    padding px(20)
    width 50%
    float left
    text-align center
    &:hover
      text-decoration underline
      background #f5f5f5
